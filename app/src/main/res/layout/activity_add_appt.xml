<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context="com.example.jonathan.hospitalapp2.addApptActivity">

    <TextView
        android:id="@+id/instruct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Appointment"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"/>

    <RelativeLayout
        android:id="@+id/field1"
        android:layout_below="@+id/instruct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/patEmLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/patEmET"
            android:layout_alignBottom="@+id/patEmET"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Patient's Email: "
            android:textSize="15dp" />

        <EditText
            android:layout_alignParentRight="true"
            android:id="@+id/patEmET"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="textWebEmailAddress"
            android:textSize="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/field2"
        android:layout_below="@+id/field1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/docEmLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/docEmET"
            android:layout_alignBottom="@+id/docEmET"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Doctor's Email: "
            android:textSize="15dp" />

        <EditText
            android:layout_alignParentRight="true"
            android:id="@+id/docEmET"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="textWebEmailAddress"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/field3"
        android:layout_below="@+id/field2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/locationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/locET"
            android:layout_alignBottom="@+id/locET"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Location: "
            android:textSize="15dp" />

        <EditText
            android:layout_alignParentRight="true"
            android:id="@+id/locET"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/field4"
        android:layout_below="@+id/field3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/taskLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/taskET"
            android:layout_alignBottom="@+id/taskET"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Task: "
            android:textSize="15dp" />

        <EditText
            android:layout_alignParentRight="true"
            android:id="@+id/taskET"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:textSize="15dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/field5"
        android:layout_below="@+id/field4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/startTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/dateAndTime"
            android:layout_alignBottom="@+id/dateAndTime"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Date and Time: "
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/dateAndTime"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <EditText
                android:id="@+id/year"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:hint="Year"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/month"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/year"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:hint="Month"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/day"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/month"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:hint="Day"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/hour"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/day"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:hint="Hour"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/minute"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/hour"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:hint="Min"
                android:textSize="15dp" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/field6"
        android:layout_below="@+id/field5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/durationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/durHourMin"
            android:layout_alignBottom="@+id/durHourMin"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="Duration:"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/durHourMin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <EditText
                android:id="@+id/durHour"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:hint="Hour"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/durMinute"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/durHour"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:hint="Min"
                android:textSize="15dp" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/taskIDTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/field6"
        android:layout_marginTop="10dp"
        android:text="Generated Appointment ID:"
        android:textAlignment="center"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="10dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:text="Cancel"
        android:onClick="cancelReg"/>

    <Button
        android:id="@+id/generateIDButton"
        android:layout_width="10dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/cancelButton"
        android:layout_alignParentBottom="true"
        android:text="Generate ID"
        android:onClick="generateID"/>

    <Button
        android:id="@+id/addApptButton"
        android:layout_width="10dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/generateIDButton"
        android:layout_alignParentBottom="true"
        android:text="Add Appt"
        android:onClick="addAppointment"/>

    <!-- TODO *****Button for get ID and button for add appointment and exit-->

</RelativeLayout>
